

<!-- Main -->
<div id="main">
<div class="cl">&nbsp;</div>

<!-- Content -->
<div id="content">

<!-- Box -->
<div class="box">
<!-- Box Head -->
<div class="box-head">
<h2>Cadastro de Novo Regisstro</h2>
</div>
<!-- End Box Head -->


<!-- Form -->
<div class="form">   

  <%= form_for [:admin ,@user] do |f| %>

   <%= error_messages_for @user %>             
   
    <p>      
      <span class="req">max 100 symbols</span>
      <label>Nome Usuário <span>(Required Field)</span></label>
       <%= f.text_field :name ,:class =>"field size1" %>

    </p>      
    <p>  
      <span class="req">Email válido: exemplo@gmail.com</span>
      <label>Email <span>(Required Field)</span></label>
       <%= f.text_field :email ,:class =>"field size1" %>  
      
    </p>  

     <p>  
      
      <label>Senha <span>(Required Field)</span></label>
       <%= f.password_field :password %>  
      
    </p>  

     <p>  
     
      <label>Confirma Senha<span>(Required Field)</span></label>
       <%= f.password_field :password_confirmation ,:class =>"field size1" %>  
      
    </p>  
 
</div>
<!-- End Form -->

<!-- Form Buttons -->
<div class="buttons">
  <%= f.submit %>
 
  <%= link_to 'Cancelar', admin_users_path , :class => "button"%>
</div>
 <% end %>
<!-- End Form Buttons -->

</div>
<!-- End Box -->

</div>
<!-- End Content -->

<!-- Sidebar -->
<div id="sidebar">

<!-- Box -->
<div class="box">

<!-- Box Head -->
<div class="box-head">
<h2>Menu Opções</h2>
</div>
<!-- End Box Head-->

<div class="box-content">
<%= link_to new_admin_user_path, :class =>"add-button" do %>
  <span>Novo Registro</span>
<% end %>


<div class="cl">&nbsp;</div>

</div>
</div>
<!-- End Box -->


</div>
<!-- End Sidebar -->

<div class="cl">&nbsp;</div>      
</div>
<!-- Main -->
